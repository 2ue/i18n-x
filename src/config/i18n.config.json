{
  "locale": "zh-CN",
  "displayLanguage": "en-US",
  "outputDir": "locales",
  "include": [
    "src/**/*.{js,ts,jsx,tsx}"
  ],
  "exclude": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "**/*.test.{js,ts,jsx,tsx}",
    "**/*.spec.{js,ts,jsx,tsx}"
  ],
  "keyGeneration": {
    "maxChineseLength": 10,
    "hashLength": 6,
    "maxRetryCount": 5,
    "pinyinOptions": {
      "toneType": "none",
      "type": "array"
    }
  },
  "output": {
    "prettyJson": true,
    "localeFileName": "{locale}.json"
  },
  "replacement": {
    "functionName": "$t",
    "quoteType": "single",
    "useOriginalTextAsKey": false
  }
}