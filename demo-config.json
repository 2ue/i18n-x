{
  "locale": "zh-CN",
  "outputDir": "locales",
  "tempDir": "temp-demo",
  "include": [
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules/**"
  ],
  "logging": {
    "enabled": true,
    "level": "verbose"
  },
  "replacement": {
    "functionName": "t",
    "autoImport": {
      "enabled": true,
      "insertPosition": "afterImports",
      "imports": {
        "**/*.js": {
          "importStatement": "import { useI18n } from './i18n';const { t } = useI18n();"
        }
      }
    }
  }
}